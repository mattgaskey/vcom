{% for item in items %}
  <div class="js-accordion__panel editorial">
    <h3 class="js-accordion__header">
      <span class="heading__text">
        {{ item.content['#paragraph'].field_headline_group[0].headline }}
      </span>
    </h3>
    {{ {
      '#type': 'processed_text',
      '#text': item.content['#paragraph'].field_body.value,
      '#format': item.content['#paragraph'].field_body.format,
    } }}
  </div>
{% endfor %}