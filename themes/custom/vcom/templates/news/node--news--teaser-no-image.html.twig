{% embed '@fractal/teaser.twig' with { teaser: { link: { url: url }, variant: 'teaser--news teaser--no-image'  } } %}
  {% block teaser_top %}
    {{ content.field_run_date }}
  {% endblock %}
  {% block teaser_content %}
    <h3 class="teaser__heading">{{ label|injectclass('teaser__text') }}</h3>
    {% if content.field_description|children %}
      {{ content.field_description }}
    {% else %}
      {{ content.body }}
    {% endif %}
  {% endblock %}
{% endembed %}